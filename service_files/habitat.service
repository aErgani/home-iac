[Unit]
Description=Habitat Service
Requires=docker.service
After=docker.service

[Service]
type=oneshot
RemainAfterExit=yes
User=root

WorkingDirectory=/opt/home-iac/habitat_server
ExecStart=/bin/docker-compose -f habitat_server-compose.yml up -d 
ExecStop=/bin/docker-compose -f habitat_server-compose.yml down

[Install]
WantedBy=multi-user.target